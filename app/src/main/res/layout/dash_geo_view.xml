<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
            android:layout_width="182dp"
            android:layout_height="300dp"
            app:cardCornerRadius="15dp" app:cardElevation="5dp"
            android:background="#FFFFFF" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:clickable="true">

            <TextView
                    android:text="@string/geo_prompt"
                    android:layout_width="110dp"
                    android:layout_height="48dp" android:id="@+id/textView"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="41dp" android:layout_marginEnd="36dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="36dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2"
                    android:fontFamily="@font/architects_daughter" android:textSize="36sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="80dp" android:layout_marginEnd="79dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="@string/dash_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="70dp" android:layout_marginEnd="69dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
            <TextView
                    android:layout_width="177dp"
                    android:layout_height="8dp" android:id="@+id/textView4"
                    android:background="#F8F8F8"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"/>
            <TextView
                    android:layout_width="105dp"
                    android:layout_height="12dp" android:id="@+id/textView5"
                    android:textSize="10sp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:layout_editor_absoluteX="39dp" android:text="@string/nearest_reminder"
                    android:gravity="center"/>
            <TextView
                    android:layout_width="144dp"
                    android:layout_height="37dp" android:id="@+id/textView6"
                    android:textSize="18sp"
                    android:gravity="center" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    android:layout_marginEnd="19dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="19dp"/>
            <TextView
                    android:layout_width="56dp"
                    android:layout_height="18dp" android:id="@+id/textView7"
                    android:gravity="center"
                    android:layout_marginEnd="61dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="62dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="12dp"
                    app:layout_constraintHorizontal_bias="0.333" android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>