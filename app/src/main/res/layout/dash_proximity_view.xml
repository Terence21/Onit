<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content" android:onClick="onClick"
                                                   android:id="@+id/_proximityConstraintLayout">
    <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:cardBackgroundColor="#E2E2E2"
            app:cardCornerRadius="10dp" app:cardElevation="9dp"
            app:cardUseCompatPadding="true" android:padding="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="300dp" android:background="@color/medOff">

            <TextView
                    android:text="@string/proximity_prompt"
                    android:layout_width="138dp"
                    android:layout_height="44dp" android:id="@+id/textView"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="22dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="22dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/_proximityCountTextView"
                    android:fontFamily="@font/architects_daughter" android:textSize="36sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="80dp" android:layout_marginEnd="79dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="@string/dash_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="70dp" android:layout_marginEnd="69dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/_proximityCountTextView"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/person_pin_black_24dp"
                    android:id="@+id/imageView6"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/imageView7" android:layout_marginEnd="132dp"
                    android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" app:srcCompat="@drawable/launch_black_24dp"
                    android:id="@+id/imageView7"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>